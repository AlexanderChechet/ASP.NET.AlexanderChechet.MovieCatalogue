
@{
    ViewBag.Title = "Index";
}

<h2>Поиск по критериям</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.Label("Поиск")
    </div>
    <div class="editor-field">
        @Html.Editor("SearchValue")
    </div>
    <div>
        @Html.Label("Добавить в поиск год")
        @Html.CheckBox("Year", false)
    </div>
    <div>
        @Html.Label("Добавить в поиск режиссера")
        @Html.CheckBox("Producer", false)
    </div>
    <div>
        @Html.Label("Добавить в поиск осписание")
        @Html.CheckBox("Description", false)
    </div>
    <p>
        <input type="submit" value="Поиск" />
    </p>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
